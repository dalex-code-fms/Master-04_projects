package fr.fms.entities;

public class Ville {
	private String city;
	private String country;
	private int nbInhabitants;
	private String monument;

	public Ville(String city, String country, int nbInhabitants, String monument) {
		setCity(city);
		setCountry(country);
		setNbInhabitants(nbInhabitants);
		setMonument(monument);
	}

	public String getCity() {
		return city;
	}

	public void setCity(String city) {
		this.city = city;
	}

	public String getCountry() {
		return country;
	}

	public void setCountry(String country) {
		this.country = country;
	}

	public int getNbInhabitants() {
		return nbInhabitants;
	}

	public void setNbInhabitants(int nbInhabitants) {
		this.nbInhabitants = nbInhabitants;
	}
	
	public String getMonument() {
		return monument;
	}

	public void setMonument(String monument) {
		this.monument = monument;
	}
	
	public String toString() {
		return String.format("monument : %s%n", monument);
	}
}
